    <rules>
        <fullName>Faulty Device Notification</fullName>
        <actions>
            <name>Faulty_Device_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Inventory_Update__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Faulty Device Notification - Cardionet</value>
        </criteriaItems>
        <description>notification to Distribution of faulty device</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>LW Lost Inventory</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Inventory_Update__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Lifewatch Lost Inventory</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>LW Lost Inventory Update - Requires More Information</fullName>
        <actions>
            <name>Lost_Inventory_Update_Status_Change</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 or 2</booleanFilter>
        <criteriaItems>
            <field>Inventory_Update__c.Review_Status__c</field>
            <operation>equals</operation>
            <value>Requires More Information</value>
        </criteriaItems>
        <criteriaItems>
            <field>Inventory_Update__c.Comments_from_Logistics__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
