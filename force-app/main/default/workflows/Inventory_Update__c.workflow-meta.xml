    <fieldUpdates>
        <fullName>LostInventorySubmitted</fullName>
        <field>Approval_Status__c</field>
        <literalValue>Submitted</literalValue>
        <name>LostInventorySubmitted</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
