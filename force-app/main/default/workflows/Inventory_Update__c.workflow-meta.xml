    <alerts>
        <fullName>Lost_Inventory_Update_Status_Change</fullName>
        <description>Lost Inventory Update Status Change</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <recipient>tina.fairing@gobio.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>LifeWatch_Automated_Templates/LW_Lost_Inventory_Update_Status_Change</template>
    </alerts>
    <fieldUpdates>
        <fullName>LostInventoryApproved</fullName>
        <field>Approval_Status__c</field>
        <literalValue>Approved by RSD</literalValue>
        <name>LostInventoryApproved</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>LostInventoryDenied</fullName>
        <field>Approval_Status__c</field>
        <literalValue>Denied</literalValue>
        <name>LostInventoryDenied</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>LostInventoryRecalled</fullName>
        <field>Approval_Status__c</field>
        <literalValue>Recalled</literalValue>
        <name>LostInventoryRecalled</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
