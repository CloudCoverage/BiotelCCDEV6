    <alerts>
        <fullName>Lost_Inventory_UpdateLW</fullName>
        <ccEmails>DL-Logistics@gobio.com</ccEmails>
        <description>Lost Inventory Update LW</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <recipient>jandjelic@gobio.com</recipient>
