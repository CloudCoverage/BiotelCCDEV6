    <decisions>
        <description>If no User record is found (no user has been assigned to the territory), the Lead Owner will not be reassigned.</description>
        <name>DCN_User_Found</name>
        <label>DCN User Found?</label>
        <locationX>761</locationX>
        <locationY>212</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>User_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varUserId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Lead_Owner</targetReference>
            </connector>
            <label>User Found</label>
        </rules>
    </decisions>
    <decisions>
        <description>If  not found Lead Owner will not be reassigned.</description>
        <name>DCN_Zip_Found</name>
